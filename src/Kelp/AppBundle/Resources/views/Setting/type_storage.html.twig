{% extends 'KelpAppBundle::base.html.twig' %}

{% form_theme form_search '@KelpApp/Form/bootstrap_3_inline_layout.html.twig' %}

{% block content %}
    <h1>Setting Type Storage</h1>

    <div class="row highlight">
        <div class="col-xs-11">
            {{ form(form_search) }}
        </div>
        <div class="col-xs-1">
            <button id="show_modal_type_storage" class="btn btn-primary pull-right">Add</button>
        </div>
    </div>

    <div>
        <table class="table table-striped table-bordered table-condensed">
            <thead>
            <tr class="active">
                <th> label </th>
                <th> class </th>
                <th> comment </th>
                <th width="6%"> Action </th>
            </tr>
            </thead>
            <tbody>
            {% for key, type_storage in search_result %}
                <tr>
                    <td> {{ type_storage.label|e }} </td>
                    <td> {{ type_storage.class|e }} </td>
                    <td> {{ type_storage.comment|e }} </td>
                    <td width="6%"> {{ table_action[key]|raw }} </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="4" class="text-center"> No Type Storage Availaible </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>

    {% include "@KelpApp/Setting/Modal/type_storage.html.twig"%}

    {% set modal_parameters = {
    delete_title: 'Suppression d\'un type storage',
    delete_question: 'Etes-vous s√ªr de vouloir supprimer ce type storage?'
    } %}
    {% include'KelpAppBundle:Modal:modal_delete.html.twig' with modal_parameters only %}

{% endblock %}
{% block javascripts %}
    {{ parent() }}
    {% include("@js/Setting/type_storage.js.twig") %}
{% endblock %}

