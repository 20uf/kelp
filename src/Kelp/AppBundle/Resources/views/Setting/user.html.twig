{% extends 'KelpAppBundle::base.html.twig' %}

{% form_theme form '@KelpApp/Form/bootstrap_3_inline_layout.html.twig' %}

{% block content %}
    <h1>Setting User</h1>

    <div class="highlight">
        {{ form(form) }}

    </div>

    <div>
        <table class="table table-striped table-bordered 1table-condensed">
            <thead>
                <tr class="active">
                    <th> Username </th>
                    <th> Email </th>
                    <th> Last Login </th>
                    <th> Role </th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                {% for user in search_result %}
                    <tr>
                        <td> {{ user.username|e }} </td>
                        <td> {{ user.email|e }} </td>
                        <td> {{ user.lastLogin|date("d/m/Y") }} </td>
                        <td> {% for role in user.roles %} {{ role }} {% endfor %}</td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}