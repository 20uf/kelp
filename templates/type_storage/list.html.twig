{% extends "base.html.twig" %}
{% block stylesheets %}
    {{ parent() }}
{% endblock %}
{% block content %}
    <div class="row">
        <div class="col-10">
            <h1>{{ 'type_storage.list.title'|trans }}</h1>
        </div>
        <div class="col-2 text-right">
            <button type="button" class="btn btn-sm btn-secondary"><i class="fas fa-plus"></i></button>
        </div>
    </div>
    {% include 'type_storage/formFilter.html.twig' %}
    <div>
        <table class="table table-striped table-bordered table-sm">
            <thead>
            <tr class="active">
                <th width="45%"> Label </th>
                <th width="45%"> Class </th>
                <th width="10%" class="text-center"> Action </th>
            </tr>
            </thead>
            <tbody>
            {% for typeStorage in pager.typeStorages %}
                <tr>
                    <td>
                        {{ typeStorage.label }}
                    </td>
                    <td>
                        {{ typeStorage.class }}
                    </td>
                    <td class="text-center">
                        <div class="btn-group btn-group-sm" role="group">
                            <button type="button" class="btn btn-secondary"><i class="fas fa-pencil-alt"></i></button>
                            <button type="button" class="btn btn-danger"><i class="far fa-trash-alt"></i></button>
                        </div>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="4" class="text-center"> Pas de type storage disponible </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>

{% set pagination = pager.pagination %}
    {% include 'pagination.html.twig' %}

{% endblock %}
