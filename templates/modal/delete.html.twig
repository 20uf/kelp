<div id="modal_delete" class="modal fade"
        {% if delete_url is defined %}
            data-url="{{ delete_url }}"
        {% endif %}
>
    <div class="modal-content modal-dialog">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal">
                <span aria-hidden="true">&times;</span><span class="sr-only">Close</span>
            </button>
            <h4 class="modal-title" id="modal_delete_title">
                {% if delete_title is defined %} {{ delete_title }} {% endif %}
            </h4>
            <div id="flash-bag-modal" class="col-md-8"></div>
        </div>

        <div class="modal-body" id="modal_delete_body">
            {% if delete_question is defined %} {{ delete_question }} {% endif %}
        </div>
        <div class="modal-footer">
            <button type="button" class="btn btn-sm btn-default" data-dismiss="modal">Non</button>
            <button type="button" class="btn btn-sm btn-primary" id="submit_delete">Oui</button>
        </div>
    </div>
</div>
