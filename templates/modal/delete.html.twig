<div id="modal_delete" class="modal" tabindex="-1" role="dialog"
        {% if delete_url is defined %}
        data-url="{{ delete_url }}"
        {% endif %}>
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title"> {% if delete_title is defined %} {{ delete_title }} {% endif %}</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body" id="modal_delete_body">
                {% if delete_question is defined %} {{ delete_question }} {% endif %}
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary" id="submit_delete">Oui</button>
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Non</button>
            </div>
        </div>
    </div>
</div>
